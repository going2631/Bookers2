

      <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60,fallback: "no_image.jpg"%>
      <table class="table">
        <tbody>
          <tr>
           <th>name</th>
           <th><%= user.name %></th>
          </tr>
          <tr>
           <th>introduction</th>
           <th><%= user.introduction%></th>
          </tr>
        </tbody>
      </table>
          <div class="btn">
          <%= link_to edit_user_path(user.id) ,class:"btn btn-outline-secondary btn-block f" do%>
            <i class="fas fa-user-cog"></i>
          <% end %>
          </div>



  <h2 class="mt-3">New book</h2>


  <%= form_with model: book, local:true do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
  <% end %>


  </div>