<main>
  <div class="container">
    <%if @book.errors.any?%>
      <tbody>
        <tr>
          <td><%= "errors :#{@book.errors.count}"%></td>
          <% @book.errors.full_messages.each do |message| %>
            <td><%= message %></td>
          <% end %>
        </tr>
      </tbody>
    <% end %>
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
          <%= form_with model:@book, local:true do |f| %>
           <div class="form-group">
              <label for="inputTitle">Title</label>
                <%= f.text_field :title, autofocus: true, id:"inputtitle", placeholder:"title"%>
          </div>
          <div class="form-group">
              <label for="inputOpinion">Opinion</label>
                <%= f.text_field :body, autofocus: true, id:"inputOpinion", placeholder:"Opinion"%>
          </div>
          <div class="form-group">
              <%= f.submit "Update Book" %>
          </div>
          <% end %>

          <%= link_to "Show", book_path(@book.id) %>
          <%= link_to "Back", books_path %>
        </div>
    </div>
</div>
</main>