<maina>
  
  <div class= "container px-5 px-sm-0">
    <div class=row>
      <%= render 'layouts/list', user: @user ,book: @book%>
 <div class="col-md-8 offset-md-1">
  <h2>Books</h2>
 <table class="table table-hover table-inverse">
   <thead>
     <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
     <% @books.each do |book|%>
       <tr><%= book.user_id %></tr>
       <tr><%= book.title%></tr>
       <tr><%= book.opinion%></tr>
       <%if @user.id == current_suer%>
         <% link_to "edit",edit_book_path(@book.id)%>
         <% link_to "destroy",book_path(@book.id), method:%>
     <% end %>
   </tbody>
 </table>
  </div>
  </div>
  </div>
