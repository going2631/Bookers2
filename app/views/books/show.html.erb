  <div class= "container px-5 px-sm-0">
    <%= flash[:success] %>
    <%= flash[:notice] %>
    <div class=row>
      <%= render 'layouts/list', user: @user ,book: @book_new %>
 <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
 <table class="table table-hover table-inverse">
   <tbody>
     <tr>
       <td><%= link_to attachment_image_tag(@user,:profile_image,:fill, 60, 60,fallback:"no_image.jpg"),user_path(@user.id)%></td>
       <td><%= @user.name%></td>
       <td><%= link_to @book.title,book_path(@book.id)%></td>
       <td><%= @book.body%></td>
       <%if @book.user_id == current_user.id %>
         <td><%= link_to "Edit",edit_book_path(@book.id)%></td>
         <td><%= link_to "Destroy",book_path(@book.id), method: :delete%></td>
       <% end %>
     </tr>
   </tbody>
 </table>
