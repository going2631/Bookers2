<main>
  <%= flash[:notice]%>
  <div class= "container px-5 px-sm-0">
    <div class=row>
      <%= render 'layouts/list', user: @user ,book: @book%>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead class="_web-inspector-hide-shortcut_">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book|%>
            <tr>
              <td><%= link_to attachment_image_tag(@user,:profile_image,:fill, 60, 60,fallback:"no_image.jpg"),user_path(@user.id)%><</td>
             <td><%= link_to "#{book.title}", book_path(book)%></td>
             <td><%= book.body%></td>
            </tr>
          <% end %>
        </tbody>

      </table>
      </div>
    </div>
  </div>
</main>