<main>
  <div class= "container px-5 px-sm-0">
        <div class=row>


  <%= render 'layouts/list', user: @user ,book: @book %>

  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <thoby>

        <% @users.each do |user|%>
          <tr>
