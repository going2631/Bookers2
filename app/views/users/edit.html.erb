<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
<%= form_with model:@user, local:true do |f| %>
  <div class="form-group">
    <label for="user_Name">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  </div>
  
  <div class="form-group">
    <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg"%>
    <label for="user_Image">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  </div>
  <div class="form-group">
    <label for="user_Introduction">Introduction</label>
    <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%>
  </div>
  <div class="form-group">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>

</div>
</div>
</div>
</main>